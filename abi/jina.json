{
    "name":"jina",
    "networks":{
        "default":{ 
            "appID": 55 
        }
    },
    "methods":[
        {
            "name":"create",
            "desc":"creates jina app",
            "args":[ { "type":"application", "name":"mng", "desc":"manager contract application ID" } ],
            "returns": {"type":"void"}
        },
        {
            "name":"manage",
            "desc":"optin to jusd and usdc",
            "args":[ 
				{ "type":"application", "name":"mng" },
				{ "type":"asset", "name":"jusd" },
				{ "type":"asset", "name":"usdc" } ],
            "returns": {"type":"void"}
        },
        {
            "name":"optin",
            "desc":"optin call to jina dapp",
            "args":[ 
				{ "type":"application", "name":"mng" }
				],
            "returns": {"type":"void"}
        },
        {
            "name":"earn",
            "desc":"provide USDCa as liquidity to earn payments",
            "args":[
				{ "type":"uint64[]", "name":"xids" },
				{ "type":"uint64", "name":"aamt" },
				{ "type":"uint64", "name":"lvr" },
				{ "type":"byte[]", "name":"lsa" }
				],
            "returns": {"type":"void"}
        },
        {
            "name":"claim",
            "desc":"claim USDCa for JUSD at 1:1",
            "args":[ 
				{ "type":"axfer", "desc":"sent jusd" },
				{ "type":"asset", "desc":"usdc from itxn" }
			],
            "returns": {"type":"void"}
        },
        {
            "name":"repay",
            "desc":"pay back loan, if full amount is repaid asset will be unfrozen",
            "args":[ 
				{ "type":"axfer" }, 
				{ "type":"uint64[]", "name":"xids" },
				{ "type":"uint64[]", "name":"ramt" },
				{ "type":"asset", "name":"xaid" }
			],
            "returns": {"type":"void"}
        },
        {
            "name":"update_collateral",
            "desc":"change the collateral amount of an asset",
            "args":[ 
				{ "type":"uint64[]", "name":"xids" },
				{ "type":"uint64[]", "name":"camt" },
				{ "type":"asset", "name":"xaid" },
				{ "type":"application", "name":"mng" },
				{ "type":"application", "name":"lqt" }
			],
            "returns": {"type":"void"}
        },
        {
            "name":"borrow",
            "desc":"borrow against your NFTs by locking them in your account",
            "args":[
				{ "type":"axfer", "name":"usdc" },
				{"type":"uint64[]", "name":"xids"},
				{"type": "uint64[]", "name":"camt"},
				{"type":"uint64[]", "name":"lamt"},
				{ "type":"account", "name":"lenders" },
				{ "type":"asset", "name":"xaid" },
				{ "type":"asset", "name":"jusd" },
				{ "type":"application", "name":"mng" },
				{ "type":"application", "name":"lqt" }
			],
            "returns":{"type": "void"}
        }
    ]
}
